    includeCSS {
        theme = EXT:cammirata9/Resources/Public/Scss/Theme/theme.scss
        cammirata-theme = EXT:cammirata9/Resources/Public/Css/cammirata.css
    }

    includeJSLibs {

    }

    includeJS {

    }

    includeJSFooterlibs {

    }

    includeJSFooter {
        cammirata9_scripts = EXT:cammirata9/Resources/Public/JavaScript/Dist/scripts.js
        smallmenu = EXT:cammirata9/Resources/Public/JavaScript/Dist/smallmenu.js
    }
